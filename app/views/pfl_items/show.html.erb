<div class="container pfl-item portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <p>
        <%= image_tag @portfolio_item.thumb_image, width: '100%' unless @portfolio_item.thumb_image.nil? %></p>
      </p>
    </div>
    <div class="col-md-5">
      <p>
        <strong>Title:</strong>
        <%= @portfolio_item.title %>
      </p>

      <p>
        <strong>Subtitle:</strong>
        <%= @portfolio_item.subtitle %>
      </p>

      <p>
        <strong>Body:</strong>
        <%= @portfolio_item.body %>
      </p>

      <hr>

      <h3>Technologies used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>   


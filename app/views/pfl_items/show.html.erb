<div class="container pfl-item portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <p>
        <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
      </p>
    </div>
    <div class="col-md-5">
      <p>
        <strong>Title:</strong>
        <%= @portfolio_item.title %>
      </p>

      <p>
        <strong>Subtitle:</strong>
        <%= @portfolio_item.subtitle %>
      </p>

      <p>
        <strong>Body:</strong>
        <%= @portfolio_item.body %>
      </p>

      <hr>

      <h3>Technologies used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
      <div>
        <%= link_to "Edit", edit_pfl_item_path(@portfolio_item), class: 'btn btn-danger' %>
      </div>
      <% end %>

    </div>
  </div>
</div>   

